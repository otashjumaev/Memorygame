<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon1"
            style="@style/IconStyle"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon2"
            style="@style/IconStyle"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon3"
            style="@style/IconStyle"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon4"
            style="@style/IconStyle"
            android:layout_below="@id/icon1"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon5"
            style="@style/IconStyle"
            android:layout_below="@id/icon2"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon6"
            style="@style/IconStyle"
            android:layout_below="@id/icon3"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon7"
            style="@style/IconStyle"
            android:layout_below="@id/icon4"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon8"
            style="@style/IconStyle"
            android:layout_below="@id/icon5"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon9"
            style="@style/IconStyle"
            android:layout_below="@id/icon4"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon10"
            style="@style/IconStyle"
            android:layout_below="@id/icon7"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon11"
            style="@style/IconStyle"
            android:layout_below="@id/icon8"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon12"
            style="@style/IconStyle"
            android:layout_below="@id/icon7"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:src="@drawable/ikon1" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>