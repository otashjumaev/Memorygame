<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/win_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"
        android:fontFamily="cursive"
        android:text="100 :"
        android:textColor="#ffaa00"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/level" />

    <LinearLayout
        android:id="@+id/starsParent"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/win_time">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/staricon" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/staricon" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/staricon" />

    </LinearLayout>

    <TextView
        android:id="@+id/ia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#fa0"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/times"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:text="Level: 1"
        android:textColor="#fa0"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/win_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/times" />

    <TextView
        android:id="@+id/times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000"
        android:textSize="40dp"
        app:layout_constraintRight_toRightOf="@id/ia"
        app:layout_constraintTop_toBottomOf="@id/ia" />

    <RelativeLayout
        android:id="@+id/parents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/starsParent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon1"
            style="@style/IconStyle2"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon2"
            style="@style/IconStyle2"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon3"
            style="@style/IconStyle2"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon4"
            style="@style/IconStyle2"
            android:layout_below="@id/icon1"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon5"
            style="@style/IconStyle2"
            android:layout_below="@id/icon2"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon6"
            style="@style/IconStyle2"
            android:layout_below="@id/icon3"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon7"
            style="@style/IconStyle2"
            android:layout_below="@id/icon4"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon8"
            style="@style/IconStyle2"
            android:layout_below="@id/icon5"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon9"
            style="@style/IconStyle2"
            android:layout_below="@id/icon4"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon10"
            style="@style/IconStyle2"
            android:layout_toRightOf="@id/icon3"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon11"
            style="@style/IconStyle2"
            android:layout_below="@id/icon1"
            android:layout_toEndOf="@+id/icon3"
            android:layout_toRightOf="@+id/icon3"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon12"
            style="@style/IconStyle2"
            android:layout_below="@id/icon4"
            android:layout_toEndOf="@+id/icon3"
            android:layout_toRightOf="@+id/icon3"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon13"
            style="@style/IconStyle2"
            android:layout_toRightOf="@id/icon10"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon14"
            style="@style/IconStyle2"
            android:layout_below="@id/icon1"
            android:layout_toEndOf="@+id/icon10"
            android:layout_toRightOf="@+id/icon10"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon15"
            style="@style/IconStyle2"
            android:layout_below="@id/icon4"
            android:layout_toEndOf="@+id/icon10"
            android:layout_toRightOf="@+id/icon10"
            android:src="@drawable/ikon1" />


        <ImageView
            android:id="@+id/icon16"
            style="@style/IconStyle2"
            android:layout_below="@id/icon7"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon17"
            style="@style/IconStyle2"
            android:layout_below="@id/icon8"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon18"
            style="@style/IconStyle2"
            android:layout_below="@id/icon8"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:src="@drawable/ikon1" />

        <ImageView
            android:id="@+id/icon19"
            style="@style/IconStyle2"
            android:layout_below="@id/icon7"
            android:layout_toRightOf="@id/icon18"
            android:src="@drawable/ikon2" />

        <ImageView
            android:id="@+id/icon20"
            style="@style/IconStyle2"
            android:layout_below="@id/icon8"
            android:layout_toEndOf="@+id/icon19"
            android:layout_toRightOf="@+id/icon19"
            android:src="@drawable/ikon1" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>